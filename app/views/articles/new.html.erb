<h1>Create a new Article</h1>
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg | %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
